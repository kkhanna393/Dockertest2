# Django Production Environment Variables

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-to-a-random-string
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database (PostgreSQL for production)
DATABASE_ENGINE=django.db.backends.postgresql
DB_NAME=helloworld_db
DB_USER=helloworld_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# PostgreSQL Environment Variables (for db service)
POSTGRES_DB=helloworld_db
POSTGRES_USER=helloworld_user
POSTGRES_PASSWORD=your-secure-database-password

# Other Settings
DJANGO_SETTINGS_MODULE=helloworld_project.settings
